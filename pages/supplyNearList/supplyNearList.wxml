<!--pages/supplyNearList/supplyNearList.wxml-->
<!--  组件的引入 -->
<import src="/components/supItem/supItem.wxml"/>

<view class="scrollWrap">
  <scroll-view class="scrollCon" scroll-y="true" bindscrolltolower="loadNextsupplyPage">

    <!-- wx:for  item Begin -->
    <navigator class="sup_item"  url="../supplyDetail/supplyDetail?supplyId={{item.id}}" wx:for="{{supplyList}}" wx:key="id">
      <template is="supItem" data="{{item,isSupImgTxt}}"></template>
    </navigator>

    <!--wx:for  item :end --->

    <!--1-3  -->
    <view wx:if="{{ isOver }}" class="to_lower">已经到底了~~</view>

    <!-- 1-4 正在加载中 -->
    <view class="onloadingWrap" wx:if="{{isLoading}}">
      <image src="../../image/loadingImg.gif" class="onloadingImg"></image> 正在刷新…
    </view>
  </scroll-view>
</view>