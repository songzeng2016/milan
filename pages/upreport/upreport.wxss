/* pages/upreport/upreport.wxss */

/* 上报展厅  Begin------ */
.swiper{ position: absolute; left: 0;top: 0; width: 100%; height: 100%; padding-top: 88rpx; box-sizing: border-box;}
.scroll_1{height: 100%;  }
/* 发布供应*/
.pubWrap{ background:#f0f2f0 ;height: 100%; width: 100%; }
.pubFItem{ margin-top: 20rpx; background: #fff; padding: 0 20rpx;}
.pubFItemCon1,.pubFItemCon2,.pubFItemCon3{display: flex;display: -webkit-flex; }
.pubFItemCon1{   height: 88rpx; line-height: 88rpx;}
.pubFItemCon2{  height: 88rpx; line-height: 88rpx; }
.pubFItemCon3{ min-height: 88rpx;line-height: 88rpx;}
.pubFItemL{ width: 154rpx; font-size: 30rpx; color: #333; }
.pubFItemR{ font-size: 30rpx; flex: 1; -webkit-flex:1; position: relative; }
.pubFItemR_Inp{ height: 88rpx; line-height: 88rpx; word-break: break-all;}
.pubFItemR_btn{width:120rpx; font-size: 30rpx; text-align: right;}
.pubFItem_pos{ width: 100%; padding: 0;}
.pubFItemR_Area{  padding: 24rpx 0; width: 100%; line-height: 40rpx; white-space: normal; min-height: 40rpx; word-break: break-all;}
.pubFConfirm{ font-size: 30rpx; height: 88rpx; line-height: 88rpx; border-radius: 4rpx; color: #fff; background: #09bb07; margin:40rpx 20rpx 16rpx; border: none; box-shadow:0px 4rpx 16rpx 2rpx rgba(9,166,7,0.25); }
.pubFConfirmAct{background:#0ab007}
/*上传图片*/
.pubFItem_upload,.pubFItem_pos{  display: inline-block; height: 60rpx; line-height: 60rpx; font-size: 28rpx;margin-top: 14rpx; border: 1px solid #ddd; }
.pubFItem_upload{float: right; }
.colorGray{ color: #808080;}
.upload_Item{ height: auto;}
.upload_Item_con{ width: 25%; height: 160rpx; text-align: center; margin-bottom:20rpx; position: relative; float: left;}
.upload_Img{ background: #eaeaea; width:160rpx; height: 160rpx;}
.upload_Btn{position: absolute; top: 0; left: 160rpx; margin-left:-36rpx; background: #fff; border-radius: 50%;  }
.upload_mask{width:160rpx;  color: #fff; background: rgba(0,0,0,0.5); font-size: 28rpx; height: 60rpx; line-height: 60rpx; position: absolute; left:50%; bottom: 0; margin-left: -80rpx; display: none;}
/* 上报展厅 End --------- */

/* 加盟展厅 Begin */
.joinWrap{ margin: 20rpx 20rpx;}
.scroll_bg{ background: #fff;}
.joinHead{ font-size: 30rpx; color: #333; line-height: 60rpx; padding-top: 10rpx;}
.joinTxt{ font-size: 24rpx; color: #666564; line-height: 48rpx;}
/* 加盟展厅 End */

/*上报展厅  基地名称弹窗 Begin */
.popBase{position: fixed; width: 100%; height: 100%; background: rgba(0,0,0,0.5); top: 0;left: 0; z-index:99; }
.popBaseCon{ background: #fff; padding: 20rpx 0 30rpx; position: relative; height: 100%; box-sizing: border-box; -webkit-box-sizing: border-box; }
.popBaseItem{padding: 0 30rpx;word-break: break-all; border-bottom: 1px solid #ebebeb;}
.popBaseItemH{ font-size: 30rpx; height: 60rpx; line-height: 60rpx; }
.popBaseItemB{ padding: 10rpx 0 16rpx;}
.popBaseCon_close{position: absolute; right: 30rpx; top: 0px; }
.popBaseItemB_name,.popBaseItemB_nameSel{ font-size: 24rpx; padding: 0 16rpx; margin-right: 20rpx; margin-bottom: 12rpx; display: inline-block; line-height: 48rpx; height: 48rpx; border:1px solid #dfdfdf ; border-radius: 6rpx; background: #f8f8f8;  }
.popBaseItemB_nameSel{ background: #09bb07; color: #fff; border: 1px solid #099906;}
.popBtn{ margin: 20rpx 30rpx;}
/*上报展厅  基地名称弹窗 End */
.BorT{ border-top: 1px solid #ebebeb; }

.enroll_popError{ background: #de352d; color: #fff; height: 58rpx; line-height: 58rpx; font-size: 24rpx; text-align: center;  position: absolute; left: 0; top: 0; width: 100%; z-index:100;}
.show{ display: block;}