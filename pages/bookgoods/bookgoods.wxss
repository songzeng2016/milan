/* pages/bookgoods/bookgoods.wxss */
/* swiper and Txt Begin*/
page{background: #f4f4f4; height: 100%; }
.scrollWrap{ height: 100%; padding-bottom:100rpx; box-sizing: border-box;}

.txt_wrap{ background: #fff; }
.txt_head{ color: #333; font-size: 32rpx;line-height: 40rpx; min-height: 40rpx; display: flex; display: -webkit-flex; padding: 25rpx 20rpx; }
.txt_headL{font-weight: bold; flex: 1; word-break: break-all; color: #333333;}
.txt_headR{ font-size:24rpx; color:#999999; width: 200rpx; text-align: right;}
.txt_body{ background: #fafafa; }
.txt_service{ height: 88rpx; line-height: 88rpx; color: #333333; font-size: 26rpx; border-bottom: 1rpx solid #e5e5e5;padding: 0 20rpx 0px;}
.txt_serviceImg{ width: 22rpx; height: 30rpx; position: relative; vertical-align: top; top: 29rpx; margin-right: 10rpx;}
.de_proTxt{ background: #fafafa; padding: 18rpx 20rpx; font-size: 26rpx; line-height: 40rpx; color: #333333;}
.de_AttrTitArowR{  vertical-align: middle; width:14rpx; height: 24rpx; margin-top: -6rpx; margin-left:10rpx; }
.de_Attr{ margin-top: 20rpx; background: #fff; }
.de_AttrTit{font-size: 26rpx; height: 76rpx; line-height: 76rpx;  color: #333333;  padding: 0 20rpx; border-bottom: 1px solid #ebebeb; border-left:4rpx solid #09bb07 ;}

.font_Size{color: #999999;}
.de_Txt_dis{ display: flex; display: -webkit-flex;  align-items: center; padding: 18rpx 20rpx; }
.de_Txt_disL{ flex: 1; -webkit-flex:1; color: #333333; font-size: 24rpx; word-break: break-all; text-align: justify; padding-right: 30rpx;line-height: 30rpx; min-height:30rpx;}
.de_Txt_disR{ width:80rpx; text-align: right; }
.de_Txt_disLtruck{ width:25rpx; height: 30rpx;margin-right: 10rpx; vertical-align:top; position: relative; top: -2rpx;  }
.de_Txt_dis_pos{ width: 44rpx; height: 44rpx; }
.de_Txt_dis_txt{ font-size: 20rpx; color: #09bb07; display: block;}

/* swiper and Txt End*/

/*用户评论 Begin*/
.de_comNoCon{ text-align: center; background: #fafafa; padding: 30rpx 0 30rpx;}
.de_comNoTxt{ color: #969996; font-size: 24rpx; line-height: 40rpx;}
.de_comNoBtn{ display: inline-block; font-size: 30rpx; height: 60rpx; line-height: 60rpx; margin-top: 20rpx;border: 1px solid #e7e7e7; background: #fff; padding: 0 25rpx;}
.actDel_sort{padding-left: 18rpx;font-weight:bold;}
.de_AttrTitArowR{  vertical-align: middle; width:14rpx; height: 24rpx; margin-top: -6rpx;  }
.act_sort{color: #969996;}
.act_UserDetWrap{ background: #fafafa;}
.act_UserDet{ padding: 15rpx 20rpx 22rpx; border-bottom: 1px solid #ebebeb;}
/*用户评论 End*/

/* 底部 foot  Begin*/
.de_foot{ position: fixed; left: 0; bottom:0; width: 100%; height: 100rpx;  box-shadow: 0 -2px 0 0 rgba(0,0,0,0.05); background: #fff;font-size: 24rpx; color: #191a19; display: flex; display: -webkit-flex; z-index: 9; }
.de_ftItem{  flex: 1; text-align: center; }
.de_ftImgCon{ text-align: center;vertical-align: middle; height: 48rpx;  padding-top: 10rpx; }
.de_ftShareImg{ width: 36rpx; height: 34rpx;}
.de_ftcommentImg{ width: 38rpx; height: 40rpx;}
.de_ftTxt{ line-height: 30rpx;}
.de_ftItemTel{ flex: 2; background: #09bb07; height: 100rpx; color: #fff; text-align: center;}
.de_ftItemTelCon{ display: inline-block;font-size: 30rpx; line-height: 100rpx;}
.de_ftItemTelL_tel{width: 38rpx; height: 43rpx;vertical-align: top; position: relative; top: 29rpx; margin-right: 20rpx; }
.de_ftGrayAct{background: #f4f4f4;}
.de_ftGreenAct{background: #179b16;}
/* 底部 foot  End*/

/* 评论 popUp Begin */
.ad_popWrap{ position: fixed; z-index: 100;  left: 0; top: 0;   width: 100%; height: 100%;}
.ad_popBg{ background: rgba(0, 0, 0, 0.5); position: absolute; left: 0; top: 0; width: 100%; height: 100%; z-index: 1;}
.ad_popCon{ position: absolute; left: 0; top: 30rpx; z-index: 2; background: #fff; width: 100%;background: #fff; border-radius: 9rpx;}
.ad_popHd{height: 76rpx; line-height: 76rpx; font-size: 32rpx;text-align: center; border-bottom: 1px solid #cdd1cd; padding: 0 20rpx;color: #202120;}
.ad_popHdL,.ad_popHdR{font-size:28rpx ; height: 76rpx; line-height: 76rpx; color: #586c94;  padding: 0; background-color: transparent;}
.ad_popHdL{ float: left; }
.ad_popHdR{ float: right;}
.ad_popFt{ padding: 30rpx 20rpx 0;}
.ad_popArea{ width: 100%; height:276rpx;background: #fff;font-size:30rpx;padding: 8rpx; box-sizing: border-box; -webkit-box-sizing: border-box; line-height: 40rpx; color: #666; background: #f4f4f4;}
.ad_popCout{ color: #969899; font-size: 24rpx; text-align: right; line-height: 58rpx; padding: 0 20rpx;}

.ad_popError{ background: #d91f16; color: #fff; height: 58rpx; line-height: 58rpx; font-size: 24rpx; text-align: center;  position: absolute; left: 0; top: 0; width: 100%; z-index:3;}
/* 评论 popUp End */

/* 正在生成分享 弹窗 Begin */
.sha_popWrap{  position: fixed; z-index: 100; background: rgba(0,0,0,0.5); left: 0; top: 0; width: 100%; height: 100%;}
.sha_popCon{ position: absolute; left:50%; top: 50%; background: #fff; width:560rpx;margin-left: -280rpx; margin-top: -200rpx; border-radius: 8rpx;  text-align: center;}
.sha_popHead,sha_popCount{ height: 60rpx; line-height: 60rpx;}
.sha_popHead{ color: #333; font-size: 36rpx; padding-top: 45rpx; }
.sha_popCount{ color: #e64240; font-size: 40rpx;}
.sha_popTxt{ color: #999999; padding: 10rpx 40rpx 30rpx; font-size: 30rpx;  line-height: 41rpx;}
.sha_popFt{ height:100rpx; line-height: 100rpx; border-top:1rpx solid #e9e9e9;font-size: 36rpx; display: flex; display: -webkit-flex; text-align: center;}
.sha_popBtnCancel{ color: #333; flex:1;}
.sha_popBtnOK{color: #00c200; flex: 1; border-left: 1px solid #e9e9e9;}
/* 正在生成分享 弹窗 End */