.serSortListItem{ color: #202120; font-size: 26rpx;  line-height: 88rpx;padding: 0 15rpx; display: flex; display: -webkit-flex;}
.serSortListItemAct{ background: #f4f4f4; color: #09bb07; line-height: 88rpx;}
.serSortListItL{ flex: 1; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }
.serSortListItR{ width:40rpx; }
.serSortListItR_ok{ vertical-align: -5rpx; line-height: 20rpx; display:inline;}

.serSortTip{ flex: 1; text-align: right;font-size: 26rpx; color: #09bb07; line-height: 66rpx; height: 66rpx;}
.serSortTip_help{ width: 26rpx; height: 26rpx; position: relative;vertical-align: top; top: 19rpx; padding-right: 9rpx;}
