/*顶部  serch Begin */
/* */
.serWrap{color: #b2b2b2; background: #f4f4f4; height: 88rpx; padding: 11rpx 20rpx; position: fixed; left: 0; top: 88rpx; width: 100%;  box-sizing: border-box; z-index: 9; display: flex; display: -webkit-flex;box-shadow: 0 7rpx 5rpx 6rpx rgba(255,255,255,0.6); } 
.serSortCon,.serCon{border:1px solid #e6e6ea; height: 64rpx;  line-height: 64rpx; background: #fff;  font-size: 26rpx;border-radius:6rpx;}
.serSortCon{ flex: 1; color: #969899; position: relative; text-indent: 15rpx; }
.serSortConAct{ border-radius:6rpx 6rpx 0 0; }
.serSortArow{ width: 24rpx; height: 14rpx; position: absolute; right:19rpx; top: 25rpx;   }
